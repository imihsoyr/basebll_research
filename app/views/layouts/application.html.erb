

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="../../favicon.ico">

  <title>Baseball Research</title>

  <!-- Bootstrap core CSS -->
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <!-- Custom styles for this template -->
  <%= stylesheet_link_tag "battings" %>

</head>

<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Baseball Research</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-left">
          <% if user_signed_in? %>
          <li><%= link_to 'Battings',"/battings" %><span class="sr-only">(current)</span></li>
          <li><%= link_to 'Pitchings',"/pitchings" %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Sign out', "/users/sign_out", method: :delete %></li>
          <% end %>
        </ul>
      </div>
    </div><!-- container-fluid -->
  </nav>

  <div class="container-fluid">

          <%= yield %>


  </div><!-- container-fluid -->

<footer class="footer">
      <div class="container">
        <span class="text-muted"> 2017 Baseball Research </span>
      </div>
    </footer>

</body>

</html>
